---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href={import.meta.env.BASE_URL}>{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">ホーム</HeaderLink>
			<HeaderLink href="/blog">市場レポート</HeaderLink>
			<HeaderLink href="/about">当サイトについて</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: #0f172a; /* Brand Primary */
		box-shadow: 0 2px 8px rgba(0,0,0, 0.15);
		color: white;
	}
	h2 {
		margin: 0;
		font-size: 1.2em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: #fcd34d; /* Brand Secondary (Gold) */
		font-weight: bold;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: #e2e8f0; /* Light text for dark header */
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a:hover {
		color: #fff;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: #fcd34d;
		color: #fff;
	}
</style>
